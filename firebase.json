{
  "hosting": [{
    "target": "verifier",
    "public": "build",
    "predeploy": "sh ./tools/bundle/create_bundle.sh config/kiva.json",
    "postdeploy": "rm -rf build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }]
}
