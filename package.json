{
  "name": "@kiva/protocol-sdk-verifier",
  "version": "1.0.1",
  "author": "Kiva Microfunds",
  "dependencies": {
    "@blueprintjs/core": "^3.39.0",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "lodash": "^4.17.21",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "qrcode": "^1.4.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-notify-toast": "^0.5.1",
    "react-phone-input-2": "^2.13.9",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@boost/translate": "^2.2.4",
    "@types/classnames": "^2.2.11",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "@types/qrcode": "^1.4.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-notify-toast": "^0.5.2",
    "@types/react-router": "^5.1.12",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "acorn": "^8.0.5",
    "cypress": "^6.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "jsonwebtoken": "^8.5.1",
    "react-scripts": "^4.0.3",
    "serve": "^11.3.2",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.2.2",
    "wait-on": "^5.2.1"
  },
  "scripts": {
    "initHooks": "sh ./tools/setup/setup_hooks.sh",
    "analyze-build": "source-map-explorer 'build/static/js/*.js'",
    "analyze": "npm-run-all -s build analyze-build",
    "compile": "tsc",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p statFileGen watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "publish-standalone": "firebase deploy --only hosting:standalone",
    "publish-integration": "firebase deploy --only hosting:integration",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "serve-build": "serve -s build",
    "statFileGen": "sh ./tools/bundle/static_file_generator.sh ${CONF_FILE:-config/get_started.json}",
    "createQaBundle": "sh ./tools/bundle/create_bundle.sh ${CONF_FILE:-config/get_started.json}",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "no-prototype-builtins": "off",
      "indent": "error",
      "no-tabs": "error"
    }
  },
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
