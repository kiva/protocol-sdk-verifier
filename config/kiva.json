{
    "headerImage": "kiva_small.jpeg",
    "locale": "en",
    "agent_port": "7567",
    "controllerUrlBase": "https://sandbox-gateway.protocol-prod.kiva.org",
    "auth_endpoints": {
        "SMS": "/v2/kyc/sms"
    },
    "verification_options": [
        {
            "id": "Kiva_QR",
            "title": "Mobile Wallet",
            "description": "Customer will use their wallet to establish a connection and provide credentials for proofs.",
            "guardian": false,
            "sequence": ["agency_qr"]
        },
        {
            "id": "SMS_OTP",
            "title": "SMS",
            "description": "Customer will verify their identity using a one-time password delivered via text message.",
            "guardian": false,
            "sequence": ["email_input", "smsotp"]
        }
    ],
    "credentialProof": "employee.proof.request.json",
    "credentialKeys": {
        "firstName": {
            "name": "First Name",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "lastName": {
            "name": "Last Name",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "companyEmail": {
            "name": "Company Email",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "hireDate": {
            "name": "Hire Date",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "currentTitle": {
            "name": "Current Title",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "team": {
            "name": "Team",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "officeLocation": {
            "name": "Office Location",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "type": {
            "name": "Employment Type",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "endDate": {
            "name": "End Date",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "photo~attach": {
            "name": "Photo",
            "proofs": {
                "employee.proof.request.json": true
            }
        },
        "Phone": {
            "name": "Phone",
            "rendered": true,
            "proofs": {
                "employee.proof.request.json": true
            }
        }
    },
    "phoneIntls": {
        "only": false,
        "countries": ["us"]
    },
    "env": {
        "prod": {
            "permittedOrigins": "https://www.kiva.org",
            "actions": {
                "includeOnly": ["reset", "enableStandalone"]
            },
            "permittedOrigins": "https://pro-cluster-kiva.web.app",
            "permittedIframeHosts": ["https://www.kiva.org"],
            "permittedOpenerOrigins": ["https://pro-cluster-kiva.web.app"],
            "isProd": true
        },
        "sandbox": {
            "inherits": ["prod"]
        },
        "qa": {
            "controllerUrlBase": "http://localhost:8080",
            "permittedOrigins": "http://localhost:8080,http://localhost:3000,https://www.kiva.org",
            "permittedIframeHosts": ["https://www.kiva.org", "http://localhost:3000", "http://localhost:8080"],
            "permittedOpenerOrigins": ["https://pro-cluster-kiva.web.app", "http://localhost:3000"]
        },
        "dev": {
            "inherits": ["qa"]
        }
    }
}
